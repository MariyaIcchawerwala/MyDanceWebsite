extends base.pug 

block scripts 
  script(src="/static/index.js") 

block style
   style
      include ../static/style.css
      include ../static/stylecontact.css
block content 
   div#formcontainer
      h1 Contact Us
      form(action="/contact", method="post" id="form")
         input(type="text" class="myinput" name="name" placeholder="Enter your Name")
         input(type="Phone" class="myinput" name="phone" placeholder="Enter your Phone")
         input(type="email" class="myinput" name="email" placeholder="Enter your Mail Id")
         input(type="text" class="myinput" name="adress" placeholder="Enter your Adress")
         input(type="text" class="myinput" name="age" placeholder="Enter your Age")
         button(class="btn")
          | Submit